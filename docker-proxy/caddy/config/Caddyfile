import *.caddy

###############################################################################
#                          ГЛОБАЛЬНЫЕ НАСТРОЙКИ                               #
###############################################################################
{
	debug
	order crowdsec before respond

	auto_https off

	# snippets
	import crowdsec_config
	import logs_global
}

:{$PORT_LOCAL_CADDYWEB} {
	encode gzip zstd

	route {
		crowdsec
		appsec

		root * /srv
		# SPA-фоллбек: если файла нет — отдать /index.html с 200
		try_files {path} /index.html
		file_server
	}
}

:{$PORT_TEST} {
	encode gzip zstd

	route {
		crowdsec
		appsec

		root * /srv/subs
		# SPA-фоллбек: если файла нет — отдать /index.html с 200
		try_files {path} /index.html
		templates
		file_server
	}
}
